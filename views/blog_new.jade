extends layout
block content
  h2= title
  form( method="post")
    div#content
      h3 Title
      input(type="text", name="title", id="editArticleTitle", class="edit-ipt")
      div
        h3 Content
        textarea( name="content", rows=10, id="editArticleBody", class="edit-textarea")
        p Category
        select(name="category")
          option(value="default", selected) Default
          option(value="life") Life
        p Postname
        input(type="text", name="postname", id="postname", class="edit-ipt")
        p Tags
        input(type="text", name="tags", id="tags", class="edit-ipt")
        if (typeof error != 'undefined')
          p=error
        p
          input(type="submit", value="Publish", class="btn btn-primary")
